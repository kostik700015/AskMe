<h1 class="mb-4"><%= @question.title%></h1>


<time datetime="<%= @question.formatted_creation_time %>">
<%= @question.formatted_creation_time%>
</time>

<p class="lead my-3">
<%= @question.body %>
</p>

<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to 'Delete', question_path(@question), class: 'btn btn-danger',
 data: {method: :delete, confirm: 'Are you sure?'} %>

<hr class="my-3">
<h2>Write your answer</h2>

<%= render 'shared/errors', object: @answer %>

<%= form_with model: [@question, @answer] do |f| %>
<div class="mb-3 row">
<div class="col-sm-2 col-form-label" >
<%= f.label :body  %>
</div>

<div class="col-sm-10">
<%=f.text_area :body, class: 'form-control' %>
  </div>
</div>

<%= f.submit "Submit answer", class: 'btn btn-primary' %>
<% end %>

<h2 class="mt-5">Answers</h2>

<% @answers.each do  |answer|%>
<article>
<time datetime="<%= answer.formatted_creation_time %>">
<%= answer.formatted_creation_time%>
</time>

<p>
  <%= answer.body%>
</p>

<%= link_to 'Delete', question_answer_path(@question, answer), class: 'btn btn-danger btn-sm',
data: {method: :delete, confirm: "Are you sure?"} %> 
</article>
<% end %>