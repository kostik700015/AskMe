<% provide :page_title, 'Questions' %>
 <% currently_at 'Questions'%>
 

<h1 class="mb-4">Questions</h1>

<%= link_to 'New questions', new_question_path, class: 'btn btn-primary btn-lg' %>

<%= paginate @questions %>

<% @questions.each do |question| %>
<article class="card mt-3">
<div class="card-body">
<h4><%= question.title%></h4>

<section class="card-text">
<time datetime="<%= question.formatted_creation_time %>">
<small><%= question.formatted_creation_time%></small>
</time>

<p class="my-2">
<%= truncate strip_tags(question.body), length: 75, omission: '...(continued)' %> <%# tags removed #%>
</p>
</section>

<%= link_to 'Show', question_path(question), class: 'btn btn-primary'%>
<%= link_to 'Edit', edit_question_path(question), class: 'btn btn-secondary' %>
<%= link_to 'Delete', question_path(question), class: 'btn btn-danger', data: {method: :delete, confirm: 'Are you sure?'} %>
</p>
</div>
</article>
<% end %>

<%= paginate @questions %>
