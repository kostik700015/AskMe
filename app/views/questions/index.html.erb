<h1>Questions</h1>

<% @questions.each do |question| %>
<h2><%= question.title%></h2>

<time datetime="<%= question.formatted_creation_time %>">
<%= question.formatted_creation_time%>
</time>

<p>
<h3><%= question.body%></h3>
<br>
<%= link_to 'Show', question_path(question)%>
<%= link_to 'Edit', edit_question_path(question)%>
<%= link_to 'Delete', question_path(question), data: {method: :delete, confirm: 'Are you sure?'} %>
</p>
<% end %>
